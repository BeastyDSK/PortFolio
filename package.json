    "dependencies": {
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "pug": "^3.0.2"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.7",
        "nodemon": "^2.0.16",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.14",
        "postcss-cli": "^9.1.0",
        "sass": "^1.52.3"
    }
}
